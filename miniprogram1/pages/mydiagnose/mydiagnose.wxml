  <cover-view class="cover-1" bindtap="diagnoseTongue">
    <cover-view class="cover-2">
      
    </cover-view>
  </cover-view>
  <cover-image
    class="cover-image"
    src="../../images/toast.png"
    style="width:100rpx;height:85rpx;"
    bindtap="devicePosition">
  </cover-image>
</camera>
<button type="primary" bindtap="diagnoseTongue">
